<section class="row">
  <% unless @company_count.zero? %>
    <% @companies.each do |company| %>
      <%=render 'index_media',company: company %>
    <% end %>
    <div class="col-12">
      <%= paginate @companies %>
    </div>
  <% else %>
    <div class="company col-12">
      <%= t(:no_data) %>
    </div>
  <% end %>
  <div class="col-12">
    <%=link_to t(:new_company),new_company_path,class: 'btn btn-primary btn-large' %>
  </div>
</section>