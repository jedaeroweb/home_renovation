<%
  render_templete='index_default'

  if session[:company_list_type].present?
    if session[:company_list_type]=='list'
      render_templete='index_list'
    end
  end

%>
<main id="companies">
  <section class="container">
        <div class="row">
          <h2 class="col-12 text-center">
            <% if @speciality_category.present? %>
          <%=@speciality_category.title %>
            <% end  %> 회사, 전문가
          </h2>
      <%=render 'search_form' %>
    <div class="col-12">
      <ul class="type-selector">
        <li><%=link_to url_for(list_type: 'list') do %><span class="material-icons">view_list</span><% end %></li>
        <li><%=link_to url_for(list_type: 'module') do %><span class="material-icons">view_module</span><% end %></li>
      </ul>
    </div>
    <div class="col-12">
      <h2 class="float-left hidden-title"><%= t(:company,scope: [:activerecord,:models]) %></h2>
      <div class="float-right">
        <p class="summary text-right">
          <span id="list_count" style="display:none"><%= @company_count %></span>
          <%= raw t(:there_are_n_companies, count: @company_count) %>
        </p>
      </div>
    </div>
  </div>
  <%=render render_templete %>
    </section>
</main>
