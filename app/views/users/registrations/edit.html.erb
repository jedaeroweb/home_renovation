<div class="container">
  <div class="row">
    <div class="col-12">
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
				<% if resource.errors.any? %>
					<div id="error_explanation" class="alert alert-danger">
						<a href="#" class="close" data-dismiss="alert">&times;</a>
						<h2><%= pluralize(resource.errors.count, "개의 문제") %>로 진행할 수 없습니다.</h2>
						<ul>
							<% resource.errors.full_messages.each do |msg| %>
								<li>
									<%= msg %>
								</li>
							<% end %>
						</ul>
					</div>
				<% end %>
        <div class="card">
					<div class="card-header">
						<h3>기본정보</h3>
					</div>
          <div class="card-body">
	  <div class="form-group">
	  	<%= f.label :name %>
	  	<%= f.text_field :name,:class=>"form-control",:autofocus => true %>
	  </div>
	  <div class="form-group">
	  	<%= f.label :email %>
	  	<%= f.email_field :email,:class=>"form-control" %>
	  </div>
						<div class="form-group">
							<%= f.label :phone %>
							<%= f.text_field :phone,:class=>"form-control" %>
						</div>
	  <div class="form-group">
      <%= f.fields_for :user_picture do |pp| %>
        <div class="form-group">
          <%= pp.label :picture %>
          <%= pp.file_field :picture, :class => "form-control",accept: "image/*" %>
        </div>
      <% end %>
	  </div>
          </div>
        </div>
				<%= f.fields_for :user_address do |ua| %>
				<div class="card">
					<div class="card-header">
						<h3>배송주소</h3>
					</div>
					<div class="card-body">
						<div class="form-group">
						<div class="form-row">
							<div class="col-9">
								<%= ua.label :postcode %>
								<%= ua.text_field :postcode, id: 'zonecode' ,:class=>"form-control" %>
							</div>
							<div class="col-3">
								<label for="validationDefault02" style="display:block;text-indent: -9999px">주소찾기</label>
								<button type="button" id="postcode" class="bt-main btn btn-secondary">주소찾기</button>
							</div>
						</div>
						</div>
						<div class="form-group">
								<%= ua.label :address %>
								<%= ua.text_field :address, id: 'addrDefault' ,:class=>"form-control" %>
						</div>
						<div class="form-group">
							<%= ua.label :address_detail %>
							<%= ua.text_field :address_detail, id: 'addrDetail' ,:class=>"form-control" %>
						</div>
					</div>
				</div>
					<% end %>
      <%= f.submit :class=>"btn btn-primary btn-block btn-lg" %>
    </div>
  </div>
  <% end %>
</div>
<script src="//t1.daumcdn.net/mapjsapi/bundle/postcode/prod/postcode.v2.js"></script>