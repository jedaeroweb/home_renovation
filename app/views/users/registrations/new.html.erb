<div class="container">
  <div class="row">
    <section class="col-12 col-lg-8 col-xl-7 col-xxl-6" style="margin-left:auto;margin-right:auto">
        <%=render 'users/sns' %>
      <div class="row">
        <div class="col-12">
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :post, :style => 'margin-top:3rem' }) do |f| %>
            <% if resource.errors.any? %>
              <div id="error_explanation" class="alert alert-danger">
                <a href="#" class="close" data-dismiss="alert">&times;</a>
                <h2><%= pluralize(resource.errors.count, "개의 문제") %>로 진행할 수 없습니다.</h2>
                <ul>
                  <% resource.errors.full_messages.each do |msg| %>
                    <li>
                      <%= msg %>
                    </li>
                  <% end %>
                </ul>
              </div>
            <% end %>
            <article>
          <h3>로그인 정보(필수입력)</h3>
          <div class="card">
            <div class="card-body">
              <div class="form-group col-12">
                <%= f.label :email %>
                <%= f.email_field :email, :class => "form-control form-control-lg" %>
              </div>
              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
              <% end %>
              <div class="form-group col-12">
                <%= f.label :password %>
                <%= f.password_field :password, :class => "form-control form-control-lg", :autocomplete => "off" %>
              </div>
              <div class="form-group col-12">
                <%= f.label :password_confirmation %>
                <%= f.password_field :password_confirmation, :class => "form-control form-control-lg" %>
              </div>
              <div class="form-group col-12">
                <%= f.label :phone %>
                <%= f.text_field :phone, :class => "form-control form-control-lg" %>
              </div>
            </div>
          </div>
        </article>
        <article>
          <h3>회원 정보(선택입력)</h3>
          <div class="card">
            <div class="card-body">
              <div class="form-group col-12">
                <%= f.label :name %>
                <%= f.text_field :name, :class => "form-control form-control-lg" %>
              </div>
              <div class="form-group col-12">
                <%= f.fields_for :user_pictures,resource.build_user_picture do |pp| %>
                  <%= pp.label :picture %>
                  <%= pp.file_field :picture, :class => "form-control-file",accept: "image/*" %>
                <% end %>
              </div>
            </div>
          </div>
        </article>
        <div class="form-actions">
          <%= f.submit value: t(:membership),:class => "btn btn-lg btn-block btn-primary", :'data-toggle' => "tooltip", :'data-placement' => "top", :title => t(:membership) %>
        </div>
      <% end %>
      </div>
      </div>
    </section>
  </div>
</div>