<article class="blog col-12 col-sm-6 col-md-3 col-xxl-2">
  <div class="row">
    <div class="col-5 col-sm-12">
      <% if blog.blog_picture.present? %>
        <%= link_to blog_path(blog) do %>
          <figure class="figure">
            <%= image_tag blog.blog_picture.picture.medium_thumb.url,class: 'figure-img img-fluid rounded'  %>
          </figure>
        <% end %>
      <% end %>
      <h3><%= link_to blog.title, blog_path(blog) %></h3>
    </div>
  </div>
</article>