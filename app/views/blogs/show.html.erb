<div id="show-blog" class="container sub-main">
  <div class="row">
    <article class="col-12" itemscope itemprop="article" itemtype="http://schema.org/Article">
      <div class="sl_content_header">
        <h3 itemprop="name"><%= @blog.title %></h3>
        <p class="text-right"><%= t(:created_at, scope: [:activerecord, :attributes, :blog]) %> : <%= I18n.l @blog.created_at.to_date, :format => :long %></p>
      </div>
      <div class="sl_content_main">
        <div class="sl_content_text" itemprop="text"><%= raw CGI.unescape_element @blog.content.to_s, ['iframe'] %></div>
      </div>
    </article>
  </div>
  <div class="row">
    <div class="btn-group btn-group-lg col-12" role="group" style="margin-top:3rem">
      <%=link_to t(:link_list),blogs_path,{class: 'btn btn-secondary btn-large btn-block'} %>
    </div>
  </div>
</div>
