<section id="show-speciality" class="col-12">
  <div class="row">
    <%= render :partial => 'layouts/notice', :locals => { :notice => notice, :alert => alert } %>
  </div>
  <div class="row">
    <div class="col-12">
      <article class="card">
        <h3 class="card-header"><%=@speciality.title %></h3>
        <div class="card-body">
          <dl>
            <dt><%= t(:created_at, scope: [:activerecord, :attributes, :speciality]) %></dt>
            <dd><%= I18n.l @speciality.created_at.to_date, :format => :long %></dd>
            <dt><%= t(:updated_at, scope: [:activerecord, :attributes, :speciality]) %></dt>
            <dd><%= I18n.l @speciality.updated_at.to_date, :format => :long %></dd>
          </dl>
          <h5><%= t(:speciality_man,scope:[:activerecord,:models]) %></h5>
          <% unless @speciality.speciality_men_count.zero? %>
          <ul>
            <% @speciality.speciality_men.each do |speciality_man| %>
            <li><%=speciality_man.title+'/'+speciality_man.pay.to_s  %>
              <%= link_to t(:edit), edit_admin_speciality_man_path(speciality_man, speciality: speciality_man.speciality_id), :class => "btn btn-link" %>
              |
              <%= link_to t(:delete), admin_speciality_man_path(speciality_man), :method => :delete, :data => { :confirm => t(:delete_confirm) }, :class => "btn btn-link"  %>
            </li>
            <% end %>
          </ul>
          <% end %>
          <%=link_to t(:add),new_admin_speciality_man_path(speciality: @speciality) %>
        </div>
      </article>
    </div>
  </div>
  <div class="row">
    <div class="col-12 col-xl-6">
      <%= link_to t(:link_list), admin_specialities_path, class: 'btn btn-secondary' %>
    </div>
    <div class="col-12 col-xl-6 text-right">
      <%= link_to t(:edit), edit_admin_speciality_path(@speciality), class: 'btn btn-secondary' %>
      <%= link_to t(:delete), admin_speciality_path(@speciality), :method => :delete, :data => { :confirm => t(:delete_cascade_confirm) }, class: 'btn btn-danger' %>
    </div>
  </div>
</section>
