<section id="show-user" class="col-12">
  <div class="row">
    <%= render :partial => 'layouts/notice', :locals => {  :notice => notice, :alert => alert } %>
  </div>
  <div class="row">
    <div class="col-12">
      <div class="card">
        <h3 class="card-header"><%=@admin.name %></h3>
        <div class="card-body">
          <dl>
            <dt><%= t(:phone, scope: [:activerecord, :attributes, :admin]) %></dt>
            <dd><%= @admin.phone %></dd>
            <dt><%= t(:created_at, scope: [:activerecord, :attributes, :admin]) %></dt>
            <dd><%= I18n.l @admin.created_at.to_date, :format => :long %></dd>
            <dt><%= t(:updated_at, scope: [:activerecord, :attributes, :admin]) %></dt>
            <dd><%= I18n.l @admin.updated_at.to_date, :format => :long %></dd>
          </dl>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-12 col-xl-6">
      <%= link_to t(:link_list), admin_admins_path, class: 'btn btn-secondary' %>
    </div>
    <div class="col-12 col-xl-6 text-right">
      <%= link_to t(:edit), edit_admin_admin_path(@admin), class: 'btn btn-secondary' %>
      <%= link_to t(:delete), admin_admin_path(@admin), class: 'btn btn-danger' %>
    </div>
  </div>
</section>
