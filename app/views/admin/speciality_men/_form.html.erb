<%= form_with(model: [:admin, speciality_man], local: true) do |form| %>
  <% if speciality_man.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <a href="#" class="close" data-dismiss="alert">&times;</a>
      <h2><%= pluralize(speciality_man.errors.count, "개의 문제") %>로 진행할 수 없습니다.</h2>
      <ul>
        <% speciality_man.errors.full_messages.each do |msg| %>
          <li>
            <%= msg %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="card">
    <div class="card-body">
      <div class="form-group">
        <%= form.hidden_field :speciality_id, value: params[:speciality].present? ? params[:speciality] : speciality_man.specaility.present? ? speciality_man.specaility_id : nil, :class => 'form-control', :required => 'required' %>
      </div>
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, :class => 'form-control', :required => 'required' %>
      </div>
      <div class="form-group">
        <%= form.label :pay %>
        <%= form.number_field :pay, :class => 'form-control', :required => 'required' %>
      </div>
    </div>
  </div>
  <div class="form-group actions">
    <%= form.submit :class => "btn btn-primary btn-block btn-lg" %>
  </div>
<% end %>