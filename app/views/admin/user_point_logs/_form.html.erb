<%= form_with(model: [:admin, user_point_log], local: true) do |form| %>
  <% if user_point_log.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <a href="#" class="close" data-dismiss="alert">&times;</a>
      <h2><%= pluralize(user_point_log.errors.count, "개의 문제") %>로 진행할 수 없습니다.</h2>
      <ul>
        <% user_point_log.errors.full_messages.each do |msg| %>
          <li>
            <%= msg %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="card">
    <div class="card-body">
        <div class="form-group">
          <%= form.label :user_id %>
          <%= form.select :user_id, options_from_collection_for_select(User.where(:enable => true), 'id', 'name',user_point_log.user_id), {}, { :class => "form-control" } %>
        </div>
      <div class="form-group">
        <%= form.label :point %>
        <%= form.number_field :point, :class => "form-control", :required => "required" %>
      </div>
    </div>
  </div>
  <%= form.submit :class => 'btn btn-primary btn-block btn-lg' %>
<% end %>