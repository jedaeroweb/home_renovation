<section id="show-reservation" class="col-12">
  <div class="row">
    <%= render :partial => 'layouts/notice', :locals => {  :notice => notice, :alert => alert } %>
  </div>
  <div class="row">
    <div class="col-12">
      <article class="card">
        <h3 class="card-header"><%=@reservation.title %></h3>
        <div class="card-body">
          <dl>
            <dt><%= t(:name, scope: [:activerecord, :attributes, :reservation]) %></dt>
            <dd>
              <% if @reservation.user.present? %>
                <%=@reservation.user.name %>
              <% else %>
                <%=@reservation.name %>
              <% end %></dd>
            <dt><%= t(:visit_time, scope: [:activerecord, :attributes, :reservation]) %></dt>
            <dd><%= @reservation.visit_time %></dd>
            <dt><%= t(:created_at, scope: [:activerecord, :attributes, :reservation]) %></dt>
            <dd><%= I18n.l @reservation.created_at.to_date, :format => :long %></dd>
            <dt><%= t(:updated_at, scope: [:activerecord, :attributes, :reservation]) %></dt>
            <dd><%= I18n.l @reservation.updated_at.to_date, :format => :long %></dd>
          </dl>
        </div>
      </article>
    </div>
  </div>
  <div class="row">
    <div class="col-12 col-xl-6">
      <%= link_to t(:link_list), admin_reservations_path, class: 'btn btn-secondary' %>
    </div>
    <div class="col-12 col-xl-6 text-right">
      <%= link_to t(:edit), edit_admin_reservation_path(@reservation), class: 'btn btn-secondary' %>
      <%= link_to t(:delete), admin_reservation_path(@reservation), :method => :delete, :data => { :confirm => t(:delete_confirm) }, class: 'btn btn-danger' %>
    </div>
  </div>
</section>
