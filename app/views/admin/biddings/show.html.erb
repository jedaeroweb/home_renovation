<section id="show-bidding" class="col-12">
  <div class="row">
    <%= render :partial => 'layouts/notice', :locals => {  :notice => notice, :alert => alert } %>
  </div>
  <div class="row">
    <div class="col-12">
      <article class="card">
        <h3 class="card-header"><%=@bidding.ad.title %></h3>
        <div class="card-body">
          <dl>
            <dt><%= t(:company_id, scope: [:activerecord, :attributes, :bidding]) %></dt>
            <dd><%=@bidding.company.title %></dd>
            <dt><%= t(:created_at, scope: [:activerecord, :attributes, :bidding]) %></dt>
            <dd><%= I18n.l @bidding.created_at.to_date, :format => :long %></dd>
            <dt><%= t(:updated_at, scope: [:activerecord, :attributes, :bidding]) %></dt>
            <dd><%= I18n.l @bidding.updated_at.to_date, :format => :long %></dd>
          </dl>
        </div>
      </article>
    </div>
  </div>
  <div class="row">
    <div class="col-12 col-xl-6">
      <%= link_to t(:link_list), admin_biddings_path, class: 'btn btn-secondary' %>
    </div>
    <div class="col-12 col-xl-6 text-right">
      <%= link_to t(:edit), edit_admin_bidding_path(@bidding), class: 'btn btn-secondary' %>
      <%= link_to t(:delete), admin_bidding_path(@bidding), :method => :delete, :data => { :confirm => t(:delete_confirm) }, class: 'btn btn-danger' %>
    </div>
  </div>
</section>
