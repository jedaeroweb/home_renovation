<%= form_with(model: [:admin, ad_category], local: true) do |form| %>
  <% if ad_category.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <a href="#" class="close" data-dismiss="alert">&times;</a>
      <h2><%= pluralize(ad_category.errors.count, "개의 문제") %>로 진행할 수 없습니다.</h2>
      <ul>
        <% ad_category.errors.full_messages.each do |msg| %>
          <li>
            <%= msg %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="card">
    <div class="card-body">
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, :class => "form-control", :required => "required" %>
      </div>
      <div class="form-group">
        <%= form.label :order_no %>
        <%= form.number_field :order_no, :class => "form-control" %>
      </div>
    </div>
  </div>
  <%= form.submit :class => 'btn btn-primary btn-block  btn-lg' %>
<% end %>