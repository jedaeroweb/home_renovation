<div id="show-question" class="container sub-main">
  <div class="row">
    <article class="col-12" itemscope itemprop="article" itemtype="http://schema.org/Article">
      <div class="sl_content_header">
        <h3 itemprop="name"><%= @question.title %></h3>
        <p class="text-right"><%= t(:created_at, scope: [:activerecord, :attributes, :question]) %> : <%= I18n.l @question.created_at.to_date, :format => :long %></p>
      </div>
      <div class="sl_content_main">
        <div class="sl_content_text" itemprop="text"><%=@question.content %></div>
      </div>
    </article>
  </div>
  <div class="row">
    <div class="btn-group btn-group-lg col-12" role="group" style="margin-top:3rem">
      <%=link_to t(:link_list),questions_path,{class: 'btn btn-secondary btn-large btn-block'} %>
    </div>
  </div>
</div>
