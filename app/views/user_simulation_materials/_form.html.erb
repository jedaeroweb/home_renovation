<%= form_with(model: user_simulation_material, local: true) do |form| %>
  <% if user_simulation_material.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <a href="#" class="close" data-dismiss="alert">&times;</a>
      <h2><%= pluralize(user_simulation_material.errors.count, "개의 문제") %>로 진행할 수 없습니다.</h2>
      <ul>
        <% user_simulation_material.errors.full_messages.each do |msg| %>
          <li>
            <%= msg %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
      <div class="form-group">
        <%= form.hidden_field :simulation_material_id, value:simulation_material.id %>
      </div>
  <div class="form-group actions">
    <%= form.submit :class => "btn btn-primary btn-block btn-lg",value: '이 조건으로 상담신청' %>
  </div>
<% end %>
