<div class="container">
  <div class="row" style="padding: 0 0 1em 0">
    <div class="col-12 section-header">
      <h2><%= t(:contact,scope: [:activerecord,:models]) %></h2>
    </div>
<div class="col-12">
<%= form_with(model: contact, local: true) do |form| %>
  <% if contact.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <a href="#" class="close" data-dismiss="alert">&times;</a>
      <h2><%= pluralize(contact.errors.count, "개의 문제") %>로 진행할 수 없습니다.</h2>
      <ul>
        <% contact.errors.full_messages.each do |msg| %>
          <li>
            <%= msg %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="card">
    <div class="card-body">
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, :class => 'form-control', :required => 'required' %>
      </div>
      <% unless user_signed_in? %>
      <div class="form-group">
        <%= form.label :phone %>
        <%= form.text_field :phone, :class => 'form-control', :required => 'required' %>
      </div>
      <% end %>
      <%= form.fields_for :contact_content do |c| %>
        <div class="form-group">
          <%= c.label :content %>
          <%= c.text_area :content, :id => "sl_content", :class => 'form-control', rows: 5 %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="form-group actions">
    <%= form.submit :class => "btn btn-primary btn-block btn-lg" %>
  </div>
<% end %>
</div>
  </div>
</div>